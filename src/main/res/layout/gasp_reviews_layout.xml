<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/gasp_review_name" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/gasp_review_stars"
            android:prompt="@string/gasp_reviews_prompt"
            android:spinnerMode="dialog"
            android:id="@+id/gasp_review_stars_spinner" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:capitalize="sentences"
            android:hint="@string/gasp_review_comment_hint"
            android:gravity="top"
            android:id="@+id/gasp_review_comments" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_button_add"
        android:id="@+id/gasp_review_button" />

</LinearLayout>